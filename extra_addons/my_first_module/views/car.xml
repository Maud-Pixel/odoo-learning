<?xml version = "1.0" encoding="utf-8" ?>
<odoo>
        <record id = "car_form" model="ir.ui.view">
            <field name="name">car.forms</field>
            <field  model="car.car">car.car</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="horse_power"/>
                            <field name="doors_number"/>
                            <field name="driver_id"/>
                            <field name="feature_ids"/>
                            <field name="total_speed"/>
                            <field name="message"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id = "car_tree" model="ir.ui.view">
            <field name="name">car.forms</field>
            <field  model="car.car">car.car</field>
            <field name="arch" type="xml">
                <form>
                    <field name="name"/>
                    <field name="horse_power"/>
                    <field name="doors_number"/>
                    <field name="driver_id"/>
                </form>
            </field>
        </record>

        <record id ="car_action" model="ir.action.act_window">
            <field name="name">car.forms</field>
            <field name="type">on.act_window</field>
            <field name="res_model">car.car</field>
            <field name="view_mode">tree, form</field>
        </record>

        <menuitem id="car_menu" name="Cars" sequence = "200" action="car_action "/>
</odoo>
